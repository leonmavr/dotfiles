# needs font-awesome to render the branch symbol
PS1='\[\033[38;5;197m\] \u@\h:\[$(tput bold)\]\w\[$(tput sgr0)\]\[\033[38;5;197m\] :\[$(tput bold)\]$(git rev-parse --abbrev-ref HEAD 2>/dev/null)\n⤷ \[$(tput sgr0)\]\[$(tput sgr0)\]'

# toggle betwen a short(1 char) and a full PS1 - 40 just empirical
function ps1(){
    if [ ${#PS1} -gt 40 ]; then
        PS1="\[$(tput bold)\]\[\033[38;5;197m\] \[$(tput sgr0)\]"
        clear
    else
		PS1='\[\033[38;5;197m\] \u@\h:\[$(tput bold)\]\w\[$(tput sgr0)\]\[\033[38;5;197m\] :\[$(tput bold)\]$(__git_ps1 "(%s)")\n⤷ \[$(tput sgr0)\]\[$(tput sgr0)\]'
    fi
}

# colored GCC warnings and errors
export GCC_COLORS='error=01;31:warning=01;35:note=01;36:caret=01;32:locus=01:quote=01'
