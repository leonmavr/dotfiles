#inactive-opacity = 0.3;
#inactive-opacity-override = false;

opacity-rule = [
  "98:class_g = 'Termite' && focused",
  "15:class_g = 'Termite' && !focused",
  "98:class_g = 'URxvt' && !_NET_WM_STATE@:32a",
  "15:class_g = 'Firefox' && !focused",
  "15:class_g = 'Thunar' && !focused",
  "80:class_g = 'i3-bar' && !_NET_WM_STATE@:32a",
  "50:class_g = 'i3-frame' && !_NET_WM_STATE@:32a",
  "0:_NET_WM_STATE@:32a *= '_NET_WM_STATE_HIDDEN'"
];
