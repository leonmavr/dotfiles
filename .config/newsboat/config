# ~/.newsboat/config
# Requirements: newsboat, mplayer, firefox/ lynx

# feeds
auto-reload yes
download-retries 5
download-timeout 20
max-items 35
keep-articles-days 7

# behaviour
external-url-viewer "urlview"
refresh-on-startup yes
player mplayer
download-full-page yes
browser "lynx -vikeys -editor=vim -accept_all_cookies %u"
scrolloff 5

# ignore ads
ignore-article "*" "title =~ \"Sponsor\""
ignore-article "*" "title =~ \"Advertisement\""
ignore-mode "display"

# keybinds
bind-key o open-in-browser-and-mark-read
bind-key j down feedlist
bind-key k up feedlist
bind-key j next articlelist
bind-key k prev articlelist
bind-key G end
bind-key l open
bind-key h quit
bind-key H hard-quit
bind-key J next-feed articlelist
bind-key K prev-feed articlelist
bind-key j down article
bind-key k up article
bind-key ; goto-url
bind-key q hard-quit 

# quitting
confirm-exit no
cleanup-on-quit yes 

# test
#highlight feedlist    "^  *[0-9]+  *N  "                    magenta  magenta
#highlight articlelist "^  *[0-9]+  *N  "                    magenta  magenta
##
#color background                                            default   default
#color listnormal                                            default   default
#color listfocus                                             magenta   default
#color info                                                  blue      black
#color article                                               default   default
#color listnormal_unread                                     white     default
#color listfocus_unread                                      color255  default 

# macros
# hit ,m to use it
macro m set browser "mpv --ytdl --ontop --no-border --force-window --autofit=960x540 --geometry=-20-50 %u > /dev/null &"; open-in-browser ; set browser "$BROWSER %u"
