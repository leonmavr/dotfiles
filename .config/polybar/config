[module/date]
type = internal/date
interval = 45
date =
date-alt = " %a, %d %b %g, "
time = %H:%M
time-alt = %H:%M
format-prefix = 
format-prefix-foreground = ${colors.foreground-alt}
label = %date% %time%
click-right = ~/.config/polybar/scripts/rofi_timezone.sh

[module/popup-calendar]
type = custom/script
format-prefix =%{T6}%{T-} 
format-prefix-foreground = ${colors.foreground-alt}
exec = ~/.config/polybar/scripts/calendar-popup.sh
interval = 60 
click-left = ~/.config/polybar/scripts/calendar-popup.sh --popup

[module/weather]
type = custom/script
exec = ~/.config/polybar/scripts/weather.sh jena de 
exec-if = ping openweathermap.org -c 1
interval = 600
;label-font = 7

[module/ram]
type = custom/script
format-prefix=
format-prefix-foreground = ${colors.foreground-alt}
exec = echo `free -m | head -2 | tail -1 | awk '{printf("%02d",100-int($NF/$2*100))}'`% 
#click-left = ~/.config/polybar/scripts/weather.sh lindau de 
exec-if = [ `free -m | head -2 | tail -1 | awk '{print int($NF/$2*100)}'` -lt 25 ] 
interval = 5 

[module/notifs]
type = custom/script
format-prefix= 
format-prefix-foreground = ${colors.foreground-alt}
interval = 60
exec = "echo "(`remind ~/.config/remind/reminders.rem | sed '/^\s*$/d' | sed -n '2,9999 p' |  wc -l`)""
click-left = ~/.config/polybar/scripts/notifs.sh
click-right = ~/.config/polybar/scripts/notifs_edit.sh

[module/redshift]
